<style>
    .testimonial-group{
       display:flex;
      gap: 70px;
      align-items: center;
      flex-direction:column;
      max-width:100%;
      padding-top: 50px;
    }
    .testimonial-card-footer{
      display:flex;
      gap:2rem;
    }
    .testimonial{
       width:100%;
      max-width:100%;
      background-position:center;
      background: url('{{ section.settings.background_image | img_url }}'); 
      background-repeat:norepeat;
      background-size:cover;
      padding: 70px;
    }
    .testimonial-cards-group {
      display: flex;
      position:relative;
      max-width: 1480px;
      justify-content: center;
      align-items: center;
      gap: 3rem;
       margin: 0 auto;
  }
   .testimonial-cards {
      background: #ffff;
      padding: 33px 46px;
      border-radius: 29px;
      border: 1px solid #d3d3d3a6;
      display: flex !important;
      flex-direction: column;
      max-width: 457px;
      min-height: 394px;
     justify-content: space-between;
  }
  h4.client-name {
      margin: 0;
      font-weight: bold;
      color: #323232;
  }
  p.client-city {
      margin: 0;
      color: lightgray;
  }
  h2.testimonial-heading {
      font-size: 58px;
      color: #27363B;
      margin: 19px;
  }
  p.testimonial-subheading {
      font-size: 16px;
      color: #27363B;
  }
  p.client-feedback {
    min-height: 148px;
}
 button.slick-arrow {
    background: transparent;
    border: navajowhite;
}
.slick-slide {
    margin: 0 20px;
}
button#btnTwo {
    position: absolute;
    right: -38px;
}
button#btnOne {
    position: absolute;
    left: -38px;
    z-index:1;
}
  
</style>

<div class="testimonial-group">
  <div class="testimnoal-heading">
    <h2 class="testimonial-heading">{{ section.settings.heading }}</h2>
    <p class="testimonial-subheading">{{ section.settings.subheading }}</p>
  </div>
  <div class="testimonial">
    <div class="testimonial-cards-group">
      {% for block in section.blocks %}
        <div class="testimonial-cards">
          {% if block.settings.stars %}
            <img src="{{ block.settings.stars | img_url:"master"}}" width="90px">
          {% endif %}
          <p class="client-feedback">{{ block.settings.feedback }}</p>
          <div class=" testimonial-card-footer">
            {% if block.settings.client_img %}
              <img src="{{ block.settings.client_img | img_url:"master"}}">
            {% endif %}
            <div class="footer-content">
              <h4 class="client-name">{{ block.settings.Client_name }}</h4>
              <p class="client-city">{{ block.settings.Client_city }}</p>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>
<script>
  $('.testimonial-cards-group').slick({
  dots: false,
  infinite: true,
  speed: 300,
  slidesToShow: 3,
  slidesToScroll: 1,
  prevArrow:'<button type="button" clsss="slick-prev" id="btnOne"><img src="https://cdn.shopify.com/s/files/1/0906/9222/3257/files/svgexport-43_1.png?v=1730867603"></button>',
  nextArrow:'<button type="button" clsss="slick-next" id="btnTwo"><img src="https://cdn.shopify.com/s/files/1/0906/9222/3257/files/svgexport-43_2.png?v=1730867604"></button>',
  responsive: [
    {
      breakpoint: 1024,
      settings: {
       
        slidesToShow: 2,
        slidesToScroll: 1,
        infinite: true,
        dots: true
      }
    },
    {
      breakpoint: 768,
      settings: {
         dots: true,
       arrows: false,
        slidesToShow: 1,
        slidesToScroll: 1
      }
    },
    {
      breakpoint: 480,
      settings: {
         dots: true,
        arrows: false,
        slidesToShow: 1,
        slidesToScroll: 1
      }
    }
    // You can unslick at a given breakpoint now by adding:
    // settings: "unslick"
    // instead of a settings object
  ]
});
</script>

{% schema %}
{
  "name": "Testimonial",
  "settings": [
    {
      "type": "textarea",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Sub Heading"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    }
  ],
  "blocks": [
    {
      "type": "testimonial",
      "name":"Testimonial Cards",
      "settings": [
        {
          "type": "image_picker",
          "id": "stars",
          "label": "Star Icons"
        },
        {
          "type": "textarea",
          "id": "feedback",
          "label": "Clients Feedback"
        },
        {
          "type": "image_picker",
          "id": "client_img",
          "label": "Client Image"
        },
        {
          "type": "text",
          "id": "Client_name",
          "label": "Client Name"
        },
        {
          "type": "text",
          "id": "Client_city",
          "label": "Client City"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Testimonial"
    }
  ]
}
{% endschema %}