<style>
    .spaces-transformed-group{
      padding:100px 5px;
      text-align:center;
    }
    .transformed-spaces-cards-group{
      display:flex;
      gap:2rem;
      position:relative;
    }
    button#btn {
      position: absolute;
      left: 13%;
      top: 44%;
      z-index: 1;
  }
    button#btntwoo {
      position: absolute;
      right: 13%;
      top: 44%;
      z-index: 1;
  }
  .space-image{
    max-width:100%;
  }
  .slick-slide {
      margin: 0 20px;
  }
    #heading{
      padding-bottom:60px;
    }
  </style>
  <div class="spaces-transformed-group">
    <h2 class="testimonial-heading" id="heading">{{ section.settings.heading }}</h2>
    <div class="transformed-spaces-cards-group">
      {% for block in section.blocks %}
          <div class="transformed-spaces-cards">
            {% if block.settings.place_image %}
              <img  class="space-image" src="{{ block.settings.place_image | img_url:"master"}}">
            {% endif %}
          </div>
        {% endfor %}
    </div>
  </div>
  <script>
    $('.transformed-spaces-cards-group').slick({
    dots: false,
    infinite: true,
    speed: 300,
    slidesToShow: 3,
    slidesToScroll: 1,
    prevArrow:'<button type="button" clsss="slick-prev" id="btn"><img src="https://cdn.shopify.com/s/files/1/0906/9222/3257/files/svgexport-43_1.png?v=1730867603"></button>',
    nextArrow:'<button type="button" clsss="slick-next" id="btntwoo"><img src="https://cdn.shopify.com/s/files/1/0906/9222/3257/files/svgexport-43_2.png?v=1730867604"></button>',
    responsive: [
      {
        breakpoint: 1024,
        settings: {
         
          slidesToShow: 2,
          slidesToScroll: 1,
          infinite: true,
          dots: true
        }
      },
      {
        breakpoint: 768,
        settings: {
           dots: true,
         arrows: false,
          slidesToShow: 1,
          slidesToScroll: 1
        }
      },
      {
        breakpoint: 480,
        settings: {
           dots: true,
          arrows: false,
          slidesToShow: 1,
          slidesToScroll: 1
        }
      }
      // You can unslick at a given breakpoint now by adding:
      // settings: "unslick"
      // instead of a settings object
    ]
  });
  </script>
  
  {% schema %}
    {
      "name": "Spaces Transformed",
      "settings": [
         {
        "type": "textarea",
        "id": "heading",
        "label": "Heading"
      }
      ],
      "blocks": [
      {
        "type": "SpacesTransformed",
        "name":"Transform places",
        "settings": [
          {
            "type": "image_picker",
            "id": "place_image",
            "label": "Image"
          }
        ]
    }
      ],
      "presets": [
        {
          "name": "Spaces Transformed"
        }
      ]
  }
  {% endschema %}
  